<body>
	<style>#symbol {
		position: absolute;
		top: 30px;
  		right: 30px;
		padding: 10px;
		font-size: 44px;
		color: #f5f6f8;
		background-color: #f387e8;
	}
  button.btn {
    margin-top: 20px;
    margin-bottom: 20px;
  }
	</style>
	
  
	<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100">
				<form class="login100-form validate-form" action="/login" method="POST">
					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape"></i>
					</span>

					<span class="login100-form-title p-b-34 p-t-27" style ="font-size:28px">
						Welcome, <%= data.first_name %> <%= data.last_name %>!
					</span>

					<span class="login100-form-title p-b-34 p-t-10" style="font-size:16px">
						PAN Number: <%= data.pan_number %>
					</span>

					<span class="login100-form-title p-b-34 p-t-10 " style="font-size:16px">
						Balance: <%= data.balance %>
					</span>

					<span class="login100-form-title p-b-34 p-t-10 " style="font-size:16px">
						DEMAT ID: <%= data.demat_id %>
					</span>

					<span class="login100-form-title p-b-34 p-t-10 " style="font-size:16px">
						Broker Name: <%= data.broker_name %>
					</span>

					<span class="login100-form-title p-b-34 p-t-10 " style="font-size:16px">
						Contact your broker at: <%= data.phone_number %>
					</span>


				</form>
        <a href="/portfolio?data=<%= encodeURIComponent(JSON.stringify(data));%>">
          <div class="text-center p-t-15">
            <button class="btn btn-primary">View My Portfolio</button>
          </div>
        </a>
        <a href="/buy_stock?data=<%= encodeURIComponent(JSON.stringify(data));%>">
          <div class="text-center p-t-15">
            <button class="btn btn-primary">Buy Stocks</button>
          </div>
        </a>
        <a href="/sell_stocks?data=<%= encodeURIComponent(JSON.stringify(data));%>">
          <div class="text-center p-t-15">
            <button class="btn btn-primary">Sell Stocks</button>
          </div>
        </a>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	
  <script>
    const form = document.getElementById('add-price-form');
    form.addEventListener('submit', (event) => {
      const symbol = '<%= data.symbol %>';
      const action = `/prices?symbol=${symbol}`;
      form.action = action;
    });
  </script>

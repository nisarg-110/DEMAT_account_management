  <body>
    <style>
      #symbol {
        position: fixed;
        top: 30px;
        right: 525px;
        padding: 10px;
        font-size: 44px;
        color: #f5f6f8;
        background-color: #f387e8;
      }

      #price-form {
        margin: 50px;
      }
    </style>

    <div class="limiter">
      <div
        class="container-login100"
        style="background-image: url('images/bg-01.jpg')"
      >
        <div class="wrap-login100">
          <h2>Company Dashboard</h2>
          <h3><%= data.company_name %> (<%= data.symbol %>)</h3>
          <div id="price-form">
            <h4>Update Number of Shares</h4>
            <form id="update-shares-form" method="POST" action="/update_shares">
              <div class="form-group">
                <label for="shares">Number of Shares:</label>
                <input
                  type="number"
                  class="form-control"
                  id="shares"
                  name="no_of_shares"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">
                Update Shares
              </button>
            </form>
            <script>
              const updateSharesForm = document.getElementById('update-shares-form');
              updateSharesForm.addEventListener('submit', (event) => {
                event.preventDefault();
                const dataString = JSON.stringify(<%- JSON.stringify(data) %>);
                const sharesInput = document.getElementById('shares');
                const shares = sharesInput.value;
                dataString.no_of_shares = shares;
                const encodedData = encodeURIComponent(dataString);
                const action = `/update_shares?data=${encodedData}`;
                updateSharesForm.action = action;
                updateSharesForm.submit();
              });
            </script>
          </div>
        </div>
      </div>
    </div>

    <div id="dropDownSelect1"></div>


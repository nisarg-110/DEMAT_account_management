  <body>
    <style>
      #symbol {
        position: fixed;
        top: 30px;
        right: 525px;
        padding: 10px;
        font-size: 44px;
        color: #f5f6f8;
        background-color: #f387e8;
      }

      #price-form {
        margin: 50px;
      }
    </style>

    <div class="limiter">
      <div
        class="container-login100"
        style="background-image: url('images/bg-01.jpg')"
      >
        <div class="wrap-login100">
          <h2>Company Dashboard</h2>
          <h3><%= data.company_name %> (<%= data.symbol %>)</h3>
          <div id="price-form">
            <h4>Add Price</h4>
            <form id="add-price-form" method="POST" action="/prices">
              <div class="form-group">
                <label for="price">Price:</label>
                <input
                  type="number"
                  class="form-control"
                  id="price"
                  name="price"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">Add Price</button>
            </form>
            <script>
              const addPriceForm = document.getElementById('add-price-form');
              addPriceForm.addEventListener('submit', (event) => {
                const dataString = JSON.stringify(<%- JSON.stringify(data) %>);
                const encodedData = encodeURIComponent(dataString);
                const action = `/prices?data=${encodedData}`;
                addPriceForm.action = action;
              });
            </script>
          </div>
        </div>
      </div>
    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
